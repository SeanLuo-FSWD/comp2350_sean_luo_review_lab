<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8"/>
		<link rel="stylesheet" href="bulma.min.css">
		<script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"> </script>
	</head>
	<body>
		<section class="section">
			<div class="maincolumns columns is-desktop is-vcentered">
				<div class="column is-10 is-offset-1 notification is-info is-light box container">
					<div class="title">
						Restaurant
					</div>
					<% if (locals.allResto) { %>
						<div class="table-container">
						<table class="table is-bordered is-hoverable is-striped is-narrow">
							<thead>
							<tr>
								<th> Resto Name </th>
								<th> Description </th>
								<th> &nbsp; </th>
							</tr>
							</thead>
							<% let i=0; %>
							<% for(i=0; i < allResto.length; i++) { %>
							<tr>
								<td><%= allResto[i].name %></td>
								<td><%= allResto[i].description %></td>
								<td><a href="/deleteResto?id=<%= allResto[i].restaurant_id %>">
									<span class="icon is-small">
										<i class="fas fa-trash"></i>
									</span></a>
								</td>
								<td>
									<a href="/showReviews?id=<%= allResto[i].restaurant_id %>&name=<%= allResto[i].name %>">
									  <span class="icon is-small">
										<i class="fas fa-star"></i>
									  </span>
									</a>
								</td>
							</tr>
							
							<% } %>
							<tfoot>
								<tr> <td colspan="4">
								There are <%= i %> restaurants.
								</td> </tr>
							</tfoot>
						</table>
						</div>
					<% } %>

					<form action="addResto" method="post">
						<div class="field is-horizontal">
						  <div class="field-label is-normal">
							<label class="label">Add New Restaurant</label>
						  </div>
						  <div class="field-body">
							<div class="field">
							  <p class="control is-expanded">
								<input name="name" class="input" type="text" placeholder="Name">
							  </p>
							</div>
							<div class="field">
							  <p class="control is-expanded">
								<input name="description" class="input" type="text" placeholder="Description">
							  </p>
							</div>							
							<div class="field">
								<button class="button is-link">
									<span>Add</span>
									<span class="icon is-small">
										<i class="fas fa-user-plus"></i>
									</span>
								</button>
							</div>
						  </div>
						</div>
					</form>
				</div>
			</div>
		</section>
	</body>
</html>
